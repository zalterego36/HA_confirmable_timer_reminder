type: custom:button-card
entity: input_datetime.input.task_name_last_done
show_icon: false
show_state: false
name: Toilet Cleaning
tap_action:
  action: call-service
  service: script.send_toilet_cleaning_confirmation
layout: grid
styles:
  grid:
    - grid-template-areas: |
        "icon"
        "name"
        "last_cleaned"
        "reminder"
    - grid-template-columns: 1fr
    - grid-template-rows: auto auto auto auto
    - row-gap: 4px
  card:
    - border-radius: 1em
    - padding: 1em
    - background: >
        [[[ return states['input_boolean.input.task_name_reminder_enabled'].state ===
        'on'
            ? '#4caf50' : '#9e9e9e' ]]]
  name:
    - grid-area: name
    - justify-self: center
    - color: white
    - font-weight: bold
    - font-size: 1.1em
  custom_fields:
    icon:
      - grid-area: icon
      - justify-self: center
    last_cleaned:
      - grid-area: last_cleaned
      - justify-self: center
      - text-align: center
      - color: white
      - white-space: normal
    reminder:
      - grid-area: reminder
      - justify-self: center
      - text-align: center
      - color: white
      - font-size: 0.9em
custom_fields:
  icon: |
    [[[ 
      // render the toilet icon
      return `<ha-icon icon="mdi:toilet" style="width:48px;height:48px;color:white;"></ha-icon>` 
    ]]]
  last_cleaned: |
    [[[ 
      // compute days since last clean
      const lastCleanedStr = entity.state;
      const last = new Date(lastCleanedStr);
      const diff = Math.floor((Date.now() - last) / (1000*60*60*24));
      return `Last cleaned ${diff} day(s) ago`;
    ]]]
  reminder: |
    [[[ 
      return states['input_boolean.input.task_name_reminder_enabled'].state === 'on'
        ? "ðŸ”” Reminders On"
        : "ðŸ”• Reminders Off";
    ]]]
